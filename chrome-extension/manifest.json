{
  "manifest_version": 3,
  "name": "Later AI - Save for Later",
  "version": "1.0.0",
  "description": "Save any content for later with AI-powered automatic categorization",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "scripting",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://*.supabase.co/*",
    "http://localhost:*/*",
    "https://*.vercel.app/*",
    "https://*.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Click to save page or login"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "quick-save": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Quick save current page to Later AI"
    }
  }
}